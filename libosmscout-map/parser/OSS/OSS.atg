  STYLESECTION
              = "STYLE"
                (. StyleFilter filter; .)
                STYLEBLOCK<filter,true>
                .

  STYLEBLOCK<StyleFilter filter, bool state>
              =
                {
                  (
                      STYLE<filter,state>
