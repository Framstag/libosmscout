                .

  WAYSTYLE<StyleFilter filter, bool state>
              = (.
                  LinePartialStyle style;
                  std::string      slot;
                .)
                [
                  "#"
                  IDENT<slot> (. style.style->SetSlot(slot); .)
                ]
